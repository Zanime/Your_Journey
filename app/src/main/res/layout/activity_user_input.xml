<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6A1B9A"
    tools:context=".DirectoryActivity">

    <TextView
        android:id="@+id/stairQuestionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:paddingTop="100dp"
        android:paddingBottom="100dp"
        android:text="Please Enter Max No. of Steps:"
        android:textColor="#F3E5F5"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/stairAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stairQuestionTitle"
        android:layout_marginLeft="8dp"
        android:inputType="number"
        android:background="#F3E5F5"
        android:layout_centerHorizontal="true"
        android:hint="Enter max number of steps"
        android:padding="16dp" />

    <Button
        android:id="@+id/stairsGoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stairAnswer"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        android:padding="16dp"
        android:text="go"
        android:textSize="24sp" />

    <Button
        android:id="@+id/stairsSkipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:background="#6A1B9A"
        android:text="Skip"
        android:textColor="#F3E5F5"
        android:textSize="26sp" />





</RelativeLayout>